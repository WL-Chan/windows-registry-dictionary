# System & Security Policies
{
  "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System": {
    "EnableLUA": {
      "description": "Controls User Account Control (UAC). When 0, UAC prompts are disabled; when 1, UAC is enabled.",
      "type": "DWORD",
      "values": {
        "0": "UAC Disabled",
        "1": "UAC Enabled"
      },
      "category": "Security"
    },
    "ConsentPromptBehaviorAdmin": {
      "description": "Determines how UAC prompts administrators when elevated privileges are requested.",
      "type": "DWORD",
      "values": {
        "0": "Elevate without prompting",
        "1": "Prompt for credentials on secure desktop",
        "2": "Prompt for consent on secure desktop",
        "3": "Prompt for credentials",
        "4": "Prompt for consent",
        "5": "Prompt for consent for non-Windows binaries (default)"
      },
      "category": "Security"
    },
    "ConsentPromptBehaviorUser": {
      "description": "Controls UAC behavior for standard users when administrative privileges are required.",
      "type": "DWORD",
      "values": {
        "0": "Automatically deny elevation requests",
        "1": "Prompt for credentials on the secure desktop"
      },
      "category": "Security"
    },
    "PromptOnSecureDesktop": {
      "description": "Specifies whether elevation prompts appear on the secure desktop or the user's desktop.",
      "type": "DWORD",
      "values": {
        "0": "Prompt on user's desktop",
        "1": "Prompt on secure desktop (recommended)"
      },
      "category": "Security"
    },
    "EnableInstallerDetection": {
      "description": "Determines whether the system detects installer programs and requests elevation automatically.",
      "type": "DWORD",
      "values": {
        "0": "Disabled",
        "1": "Enabled"
      },
      "category": "Security"
    },
    "ValidateAdminCodeSignatures": {
      "description": "Specifies whether Windows enforces digital signature validation for elevated applications.",
      "type": "DWORD",
      "values": {
        "0": "Disabled (default)",
        "1": "Enabled"
      },
      "category": "Security"
    },
    "FilterAdministratorToken": {
      "description": "Controls Admin Approval Mode for the built-in Administrator account.",
      "type": "DWORD",
      "values": {
        "0": "Admin Approval Mode disabled (default)",
        "1": "Admin Approval Mode enabled"
      },
      "category": "Security"
    },
    "EnableVirtualization": {
      "description": "Controls file and registry virtualization for legacy applications that write to protected locations.",
      "type": "DWORD",
      "values": {
        "0": "Virtualization disabled",
        "1": "Virtualization enabled"
      },
      "category": "Compatibility"
    },
    "EnableSecureUIAPaths": {
      "description": "Enforces secure paths for UI Automation accessibility applications.",
      "type": "DWORD",
      "values": {
        "0": "Disabled",
        "1": "Enabled"
      },
      "category": "Accessibility"
    },
    "LegalNoticeCaption": {
      "description": "Specifies the title of the legal notice displayed before logon.",
      "type": "REG_SZ",
      "category": "Security"
    },
    "LegalNoticeText": {
      "description": "Specifies the text of the legal notice displayed before logon.",
      "type": "REG_SZ",
      "category": "Security"
    },
    "DontDisplayLastUserName": {
      "description": "Hides the name of the last user who logged on at the logon screen.",
      "type": "DWORD",
      "values": {
        "0": "Show last logged-on user name (default)",
        "1": "Do not display last user name"
      },
      "category": "Security"
    },
    "ShutdownWithoutLogon": {
      "description": "Allows the computer to be shut down from the logon screen without logging in.",
      "type": "DWORD",
      "values": {
        "0": "Disabled",
        "1": "Enabled (default)"
      },
      "category": "System Core"
    },
    "UndockWithoutLogon": {
      "description": "Allows portable computers to undock without logging on.",
      "type": "DWORD",
      "values": {
        "0": "Disabled",
        "1": "Enabled"
      },
      "category": "System Core"
    },
    "DisableCAD": {
      "description": "Removes the requirement to press Ctrl+Alt+Del before logging on.",
      "type": "DWORD",
      "values": {
        "0": "Ctrl+Alt+Del required (default)",
        "1": "Ctrl+Alt+Del not required"
      },
      "category": "Security"
    }
  }
}
# Startup and Run Keys
{
  "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Run": {
    "*": {
      "description": "Specifies applications that automatically start for all users at system startup.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Run": {
    "*": {
      "description": "Specifies programs that automatically start when the current user logs in.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\RunOnce": {
    "*": {
      "description": "Programs listed here run once for all users at the next system startup and are then removed.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\RunOnce": {
    "*": {
      "description": "Programs listed here run once at the next user logon and are then deleted by the system.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\Explorer\\Run": {
    "*": {
      "description": "Startup programs configured via Group Policy. These entries execute at system startup for all users.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\Explorer\\Run": {
    "*": {
      "description": "User-specific startup programs configured via Group Policy.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_LOCAL_MACHINE\\SOFTWARE\\WOW6432Node\\Microsoft\\Windows\\CurrentVersion\\Run": {
    "*": {
      "description": "Startup programs for 32-bit applications on 64-bit Windows. Executes for all users at startup.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Shell Folders": {
    "Common Startup": {
      "description": "Specifies the physical folder path where startup shortcuts for all users are stored.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  },

  "HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Shell Folders": {
    "Startup": {
      "description": "Specifies the folder path for the current user’s Startup folder.",
      "type": "REG_SZ",
      "category": "Startup"
    }
  }
}
